<%- include('partials/header') %>

<main>
    <div class="container" style="margin-top: 20px;">
        
        <% if (typeof tempPasswordInfo !== 'undefined' && tempPasswordInfo) { %>
            <div class="alert alert-success" role="alert">
                <h4 class="alert-heading">¡Éxito!</h4>
                <p>
                    Se restableció la contraseña para el usuario <strong><%= tempPasswordInfo.userName %></strong>.
                </p>
                <hr>
                <p class="mb-0">
                    La nueva contraseña temporal es: <strong><%= tempPasswordInfo.pass %></strong>
                </p>
            </div>
        <% } %>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Panel de Usuarios</h1>
            <a href="/register" class="btn btn-primary">Añadir Nuevo Usuario</a>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre de Usuario</th>
                    <th>Nombre Completo</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% usuarios.forEach(usuario => { %>
                    <tr>
                        <td><%= usuario.id %></td>
                        <td><%= usuario.nombre_usuario %></td>
                        <td><%= usuario.nombre_completo %></td>
                        <td><%= usuario.rol %></td>
                        
                        <td>
                            <form 
                                action="/admin/reset-password/<%= usuario.id %>" 
                                method="POST" 
                                class="d-inline"
                                onsubmit="return confirm('¿Estás seguro de que deseas restablecer la contraseña para este usuario?');"
                            >
                                <button 
                                    type="submit" 
                                    class="btn btn-sm btn-secondary"
                                    <%# Deshabilitar el botón si el admin es el mismo usuario %>
                                    <%= (usuario.id === locals.usuario.id) ? 'disabled' : '' %>
                                >
                                    Restablecer Contraseña
                                </button>
                            </form>
                        </td>

                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</main>

<%- include('partials/footer') %>